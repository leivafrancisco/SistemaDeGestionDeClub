				{
					"name": "Login - Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Guardar el token automáticamente en la variable de entorno",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    console.log(\"Token guardado exitosamente\");",
									"    ",
									"    // Tests automáticos",
									"    pm.test(\"Login exitoso\", function () {",
									"        pm.response.to.have.status(200);",
									"    });",
									"    ",
									"    pm.test(\"Respuesta tiene token\", function () {",
									"        pm.expect(jsonData).to.have.property('token');",
									"    });",
									"    ",
									"    pm.test(\"Respuesta tiene usuario\", function () {",
									"        pm.expect(jsonData).to.have.property('usuario');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nombreUsuario\": \"admin\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/Auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
